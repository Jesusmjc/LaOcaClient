<Window x:Class="LaOcaClient.CambiarContraseña"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaOcaClient"
        mc:Ignorable="d"
        Title="Cambiar Contraseña" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Contraseña Actual" Margin="0,0,0,10"/>
            <PasswordBox x:Name="tbContraseñaActual" Margin="0,0,0,20"/>

            <TextBlock Text="Nueva Contraseña" Margin="0,0,0,10"/>
            <PasswordBox x:Name="tbNuevaContraseña" Margin="0,0,0,20"/>

            <TextBlock Text="Confirmar Nueva Contraseña" Margin="0,0,0,10"/>
            <PasswordBox x:Name="tbConfirmarNuevaContraseña" Margin="0,0,0,20"/>

            <Button Content="Actualizar Contraseña" Click="btnActualizarContraseña_Click" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Window>
